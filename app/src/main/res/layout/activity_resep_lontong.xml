<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResepLontong">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resep Lontong Balap"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahan Kuah :"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bumbu balus bawang merah bawang putih
\n1-2 batang daun bawang
\n500 ml Air -+
\n2 sdm gula
\n1 sdm garam
\n1 sdm kecap manis
\nsecukupnya penyedap
\n1-2 bungkus tauge"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahan Sajian :"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 buah lontong
\n5-10 buah tahu putih/coklat (optional)
\n2 siung bawang putih goreng
\n1-2 bungkus mie kuning
\nsecukupnya petis
\ncabai secukupnya (optional)
\nsecukupnya seledri"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Langkah-langkah :"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.	Tumis bumbu halus dan daun bawang
\n2.	Masukkan air -+ 500 ml
\n3.	Tambahkan gula, garam dan kecap manis lalu tunggu hingga mendidih
\n4.	Jika sudah mendidih, masukkan tauge, diaduk sebentar lalu matikan kompor dan tutup
\n5.	Cara penyajian: buat campuran bawang putih goreng, petis dan cabe(optional)
\n6.	Tambahkan lontong dan tahu dan lentho (harusnya lentho, tapi karna gak bikin, jadilah bakwan toge aja)
\n7.	Tambahkan mie kuning
\n8.	Siram dengan kuah sayur toge. Lontong balap siap dinikmati."/>

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="450dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="121dp"
            android:layout_marginTop="30dp"/>



    </LinearLayout>
</ScrollView>